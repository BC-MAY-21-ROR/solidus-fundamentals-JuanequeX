<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <div class="form-group">
      <%= f.label :email, t('spree.email'), class: "mb-1" %>
      <%= f.email_field :email, class: 'title form-control', tabindex: 1, autofocus: true %>
    </div >
    <div class="form-group">
      <%= f.label :password, t('spree.password'), class: "mb-1 mt-1" %>
      <%= f.password_field :password, class: 'title form-control', tabindex: 2 %>
    </div >
  </div>
  <div class="form-group">
    <%= f.check_box :remember_me, tabindex: 3 %>
    <%= f.label :remember_me, t('spree.remember_me'),class: "mb-1 mt-1" %>
  </div>

  <div class="actions">
    <%= f.submit t('spree.login'), class: 'btn btn-success w-100 btn-block', tabindex: 4 %>
  </div >
<% end %>
